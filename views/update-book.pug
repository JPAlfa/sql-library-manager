extends layout.pug

block head
  - const {id, title, author, genre, year} = book;
  title= title

block content
  header
    div.container
      h1 Update Book

  main
    div.container
      include errors.pug

      form(action=`/books/${id}`, method="post")
        p
          label(for='title') Title
          input#title(name='title' type='text' value=`${title}`)
        p
          label(for='author') Author
          input#author(name='author' type='text' value=`${author}`)
        p
          label(for='genre') Genre
          input#genre(name='genre' type='text' value=`${genre}`)
        p
          label(for='year') Year
          input#year(name='year' type='text' value=`${year}`)
        div.btn-container
          a#ghost-btn.button(href='/books') Cancel
          input(type='submit' value='Update Book')
          a#delete-btn.button Delete
      div.modal-container
        div.modal
          form(method='post' action=`/books/${id}/delete`)
            i.fas.fa-times
            p= `Are you sure you want to delete ${title}?`
            a#close-btn.button Cancel
            input#delete-btn(type='submit' value='Delete Book')