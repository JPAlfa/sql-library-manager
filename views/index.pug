extends layout.pug

block head
  title Books

block content
  h1 Books
  p
    a.button(href='/books/new') Create New Book
  table
    thead
      tr
        th Title
        th Author
        th Genre
        th Year
    tbody
      each book in books
        - const {id, title, author, genre, year} = book;
        tr
          td
            a(href=`/book/${id}`)= title
          td= author
          td= genre
          td= year